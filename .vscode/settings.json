{
  // ═══════════════════════════════════════════════════════════
  // ARNOMA VS CODE WORKSPACE SETTINGS
  // Optimized for HTML + JavaScript + Supabase development
  // ═══════════════════════════════════════════════════════════

  // ──────────────────────────────────────────────────────────
  // EDITOR BEHAVIOR
  // ──────────────────────────────────────────────────────────
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.rulers": [100, 120],

  // ──────────────────────────────────────────────────────────
  // FILES
  // ──────────────────────────────────────────────────────────
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/cypress/videos": true,
    "**/cypress/screenshots": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },

  // ──────────────────────────────────────────────────────────
  // PRETTIER CONFIGURATION
  // ──────────────────────────────────────────────────────────
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ──────────────────────────────────────────────────────────
  // ESLINT CONFIGURATION
  // ──────────────────────────────────────────────────────────
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ──────────────────────────────────────────────────────────
  // ERROR LENS (inline error display)
  // ──────────────────────────────────────────────────────────
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.fontSize": "12px",
  "errorLens.delay": 500,

  // ──────────────────────────────────────────────────────────
  // CODE SPELL CHECKER
  // ──────────────────────────────────────────────────────────
  "cSpell.enabled": true,
  "cSpell.language": "en,it",
  "cSpell.words": [
    "Supabase",
    "ARNOMA",
    "richyfesta",
    "arnoma",
    "Richy",
    "Festa",
    "supabase",
    "dbsync",
    "autoreminder",
    "unpaid",
    "lightbox",
    "timestamptz",
    "sweetalert",
    "noopener",
    "noreferrer"
  ],
  "cSpell.ignoreWords": [
    "gmail",
    "href",
    "onclick",
    "onerror",
    "onload"
  ],

  // ──────────────────────────────────────────────────────────
  // LIVE SERVER
  // ──────────────────────────────────────────────────────────
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.fullReload": true,

  // ──────────────────────────────────────────────────────────
  // GITHUB COPILOT & CHAT AUTO-APPROVE
  // ──────────────────────────────────────────────────────────
  "security.workspace.trust.untrustedFiles": "open",
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "0": true,
    "1": true,
    "400000": true,
    "open": true,
    "cd /tmp && python3 -m http.server 8000": { "approve": true, "matchCommandLine": true },
    "python3 -m http.server 8000": { "approve": true, "matchCommandLine": true },
    "weekday:": true,
    "python3 weekday cmd": true,
    "cd /tmp && python3 -m http.server 8001": { "approve": true, "matchCommandLine": true },
    "cd /tmp && python3 -m http.server 8002": { "approve": true, "matchCommandLine": true },
    "cp": true,
    "sed": true,
    "grep": true,
    "ps": true,
    "kill": true,
    "pkill": true,
    "lsof": true,
    "hexdump": true,
    "awk": true,
    "base64": true,
    "rm": true,
    "mv": true,
    "git add": true,
    "git commit": true,
    "git push": true,
    "git checkout": true,
    "git branch": true,
    "git remote": true,
    "npm install": true,
    "npm run lint": true,
    "node": true,
    "python3": true,
    "echo": true,
    "npx": true,
    "chmod": true,
    "curl": true,
    "diff": true,
    "uniq": true,
    "firebase": true,
    "script": true,
    "/script": true,
    "div": true,
    "span": true,
    "img": true,
    "style": true,
    "button": true,
    "label": true,
    "input": true,
    "textarea": true,
    "section": true,
    "p": true,
    "h1": true,
    "h2": true,
    "h3": true,
    "h4": true,
    "li": true,
    "ul": true,
    "ol": true,
    "meta": true,
    "link": true,
    "title": true,
    "body": true,
    "html": true,
    "DOCTYPE": true,
    "return": true,
    "function": true,
    "const": true,
    "let": true,
    "var": true,
    "=": true,
    "}": true,
    "{": true,
    "(": true,
    ")": true,
    "[": true,
    "]": true,
    "--": true,
    "//": true,
    "JS": true,
    "PY": true,
    "'": true,
    "\"": true,
    "ANY OTHER COMMAND": true
  },
  "chat.agent.maxRequests": 1000,
  "chat.numberOfHistoryMessagesToShow": 4,
  "chat.defaultResponseTone": "short",
  "chat.defaultResponseDetail": "low",
  "chat.editor.fontSize": 12,
  "chat.experimental.fastMode": true,
  "chat.model.preferred": "gpt-4.1-mini",
  "chat.model.fallback": "gpt-4.1",
  "chat.model.useCompactMode": true,
  "chat.context.limit": 3000,
  "chat.context.trimStrategy": "oldest",
  "chat.context.autoClear": true,
  "chat.editor.minimap.enabled": false,
  "chat.editor.lineHeight": 1.2,
  "chat.editor.wordWrap": "on",
  "chat.renderMarkdown": true,
  "workbench.reduceMotion": "on",
  "editor.cursorBlinking": "solid",

  // ──────────────────────────────────────────────────────────
  // GITLENS
  // ──────────────────────────────────────────────────────────
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "git.openRepositoryInParentFolders": "always",

  // ──────────────────────────────────────────────────────────
  // SONARLINT
  // ──────────────────────────────────────────────────────────
  "sonarlint.rules": {
    "javascript:S1192": {
      "level": "off"
    },
    "javascript:S3776": {
      "level": "off"
    }
  },

  // ──────────────────────────────────────────────────────────
  // PATH INTELLISENSE
  // ──────────────────────────────────────────────────────────
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,

  // ──────────────────────────────────────────────────────────
  // TERMINAL
  // ──────────────────────────────────────────────────────────
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Monaco, 'Courier New', monospace",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "python.defaultInterpreterPath": "/usr/bin/python3",

  // ──────────────────────────────────────────────────────────
  // CONSOLE NINJA
  // ──────────────────────────────────────────────────────────
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-server-extension": true,
    "live-preview-extension": true
  },
  "console-ninja.featureSet": "Community",
  "console-ninja.installBinToPath": true,

  // ──────────────────────────────────────────────────────────
  // EMMET (HTML shortcuts)
  // ──────────────────────────────────────────────────────────
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // ──────────────────────────────────────────────────────────
  // SEARCH & EXPLORER
  // ──────────────────────────────────────────────────────────
  "search.exclude": {
    "**/node_modules": true,
    "**/cypress/videos": true,
    "**/cypress/screenshots": true,
    "**/*.log": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ──────────────────────────────────────────────────────────
  // TYPESCRIPT/JAVASCRIPT INTELLISENSE
  // ──────────────────────────────────────────────────────────
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,

  // ──────────────────────────────────────────────────────────
  // HTML
  // ──────────────────────────────────────────────────────────
  "html.format.wrapLineLength": 120,
  "html.format.indentInnerHtml": true,
  "html.format.wrapAttributes": "auto",

  // ──────────────────────────────────────────────────────────
  // CSS
  // ──────────────────────────────────────────────────────────
  "css.lint.unknownAtRules": "ignore",
  "css.validate": true,

  // ──────────────────────────────────────────────────────────
  // COLOR CUSTOMIZATION
  // ──────────────────────────────────────────────────────────
  "workbench.colorCustomizations": {
    "editorError.foreground": "#ff0000",
    "editorWarning.foreground": "#FFA500"
  }
}
