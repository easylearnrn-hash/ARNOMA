{
  // ═══════════════════════════════════════════════════════════
  // ARNOMA VS CODE WORKSPACE SETTINGS
  // Optimized for HTML + JavaScript + Supabase development
  // ═══════════════════════════════════════════════════════════

  // ──────────────────────────────────────────────────────────
  // EDITOR BEHAVIOR
  // ──────────────────────────────────────────────────────────
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.rulers": [100, 120],

  // ──────────────────────────────────────────────────────────
  // FILES
  // ──────────────────────────────────────────────────────────
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/cypress/videos": true,
    "**/cypress/screenshots": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },

  // ──────────────────────────────────────────────────────────
  // PRETTIER CONFIGURATION
  // ──────────────────────────────────────────────────────────
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ──────────────────────────────────────────────────────────
  // ESLINT CONFIGURATION
  // ──────────────────────────────────────────────────────────
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ──────────────────────────────────────────────────────────
  // ERROR LENS (inline error display)
  // ──────────────────────────────────────────────────────────
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.fontSize": "12px",
  "errorLens.delay": 500,

  // ──────────────────────────────────────────────────────────
  // CODE SPELL CHECKER
  // ──────────────────────────────────────────────────────────
  "cSpell.enabled": true,
  "cSpell.language": "en,it",
  "cSpell.words": [
    "Supabase",
    "ARNOMA",
    "richyfesta",
    "arnoma",
    "Richy",
    "Festa",
    "supabase",
    "dbsync",
    "autoreminder",
    "unpaid",
    "lightbox",
    "timestamptz",
    "sweetalert",
    "noopener",
    "noreferrer"
  ],
  "cSpell.ignoreWords": [
    "gmail",
    "href",
    "onclick",
    "onerror",
    "onload"
  ],

  // ──────────────────────────────────────────────────────────
  // LIVE SERVER
  // ──────────────────────────────────────────────────────────
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.fullReload": true,

  // ──────────────────────────────────────────────────────────
  // GITLENS
  // ──────────────────────────────────────────────────────────
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": true,

  // ──────────────────────────────────────────────────────────
  // SONARLINT
  // ──────────────────────────────────────────────────────────
  "sonarlint.rules": {
    "javascript:S1192": {
      "level": "off"
    },
    "javascript:S3776": {
      "level": "off"
    }
  },

  // ──────────────────────────────────────────────────────────
  // PATH INTELLISENSE
  // ──────────────────────────────────────────────────────────
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,

  // ──────────────────────────────────────────────────────────
  // TERMINAL
  // ──────────────────────────────────────────────────────────
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Monaco, 'Courier New', monospace",
  "terminal.integrated.defaultProfile.osx": "zsh",

  // ──────────────────────────────────────────────────────────
  // EMMET (HTML shortcuts)
  // ──────────────────────────────────────────────────────────
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // ──────────────────────────────────────────────────────────
  // SEARCH & EXPLORER
  // ──────────────────────────────────────────────────────────
  "search.exclude": {
    "**/node_modules": true,
    "**/cypress/videos": true,
    "**/cypress/screenshots": true,
    "**/*.log": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ──────────────────────────────────────────────────────────
  // TYPESCRIPT/JAVASCRIPT INTELLISENSE
  // ──────────────────────────────────────────────────────────
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,

  // ──────────────────────────────────────────────────────────
  // HTML
  // ──────────────────────────────────────────────────────────
  "html.format.wrapLineLength": 120,
  "html.format.indentInnerHtml": true,
  "html.format.wrapAttributes": "auto",

  // ──────────────────────────────────────────────────────────
  // CSS
  // ──────────────────────────────────────────────────────────
  "css.lint.unknownAtRules": "ignore",
  "css.validate": true,

  // ──────────────────────────────────────────────────────────
  // COLOR CUSTOMIZATION
  // ──────────────────────────────────────────────────────────
  "workbench.colorCustomizations": {
    "editorError.foreground": "#ff0000",
    "editorWarning.foreground": "#FFA500"
  }
}
